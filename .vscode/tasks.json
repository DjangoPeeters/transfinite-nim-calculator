{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build with Make",
            "type": "shell",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build using Makefile (incremental compilation)"
        },
        {
            "label": "Build Debug",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-pthread",
                "-g",
                "-O0",
                "-DDEBUG",
                "*.cpp",
                "-o",
                "${fileDirname}/bin/main_debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build with debug symbols and no optimization"
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "${fileDirname}/bin/main",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "dependsOn": "Build with Make",
            "detail": "Build and run the multithreaded calculator"
        },
        {
            "label": "Clean with Make",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Clean build artifacts using Makefile"
        },
        {
            "label": "Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build with Make",
                "Run Program"
            ],
            "group": "test",
            "detail": "Build the project and run it immediately"
        }
    ],
    "version": "2.0.0"
}